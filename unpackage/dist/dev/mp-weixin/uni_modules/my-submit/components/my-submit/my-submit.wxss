/* 水平间距 */
.my-settle-container {
  /* 底部固定定位 */
  position: fixed;
  bottom: 0;
  left: 0;
  /* 设置宽高和背景色 */
  width: 100%;
  height: 50px;
  background-color: white;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 14px;
}
.my-settle-container .amount-box {
  margin: 0 20px;
}
.my-settle-container .text {
  color: #a1a1a1;
}
.my-settle-container .amount {
  color: #c00000;
}
.my-settle-container .btn-settle {
  border-radius: 30px;
  height: 40px;
  min-width: 90px;
  background-color: #ea0000;
  color: white;
  line-height: 40px;
  text-align: center;
  margin-right: 20px;
}

