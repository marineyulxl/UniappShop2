/* 水平间距 */
.goods-item {
  display: flex;
  padding: 10px 5px;
  border-bottom: 1px solid #e1e1e1;
}
.goods-item .goods-item-left {
  margin-right: 5px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goods-item .goods-item-left .goods-pic {
  width: 100px;
  height: 100px;
  display: block;
}
.goods-item .goods-item-right {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-between;
}
.goods-item .goods-item-right .goods-name {
  color: #c00000;
}
.goods-item .goods-item-right .goods_describe {
  font-size: 13px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods-item .goods-item-right .goods-info-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.goods-item .goods-item-right .goods-price {
  font-size: 16px;
  color: #c00000;
}

